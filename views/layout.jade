doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    // Title here
    title Mailzee - Smart Mail box
    // Description, Keywords and Author
    meta(name='description', content='Your description')
    meta(name='keywords', content='Your,Keywords')
    meta(name='author', content='ResponsiveWebInc')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    
    link(rel='manifest', href='/manifest.json')
    
    // Styles
    // Bootstrap CSS
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    link(href='/css/bootstrap-social.css', rel='stylesheet')
    link(href='/css/bootstrap-switch.min.css', rel='stylesheet')
    // SLIDER REVOLUTION 4.x CSS SETTINGS
    link(rel='stylesheet', href='/css/settings.css', media='screen')
    // Pretty Photo
    link(href='/css/prettyPhoto.css', rel='stylesheet')
    // Font awesome CSS
    link(href='/css/font-awesome.min.css', rel='stylesheet')
    // Custom CSS
    link(href='/css/style.css', rel='stylesheet')
    // Color Stylesheet - orange, blue, pink, brown, red or green
    link(href='/css/blue.css', rel='stylesheet')
    // Favicon
    link(rel='shortcut icon', href='img/favicon/favicon.png')
  body
    include partials/header

    .container
      .wrapper
        include partials/flash
        block content
        .push

    include partials/footer

    
    // / Footer
    // Scroll to top
    span.totop
      a(href='#')
        i.fa.fa-angle-up
    // Javascript files
    // jQuery
    script(src='/js/jquery.js')
    // Bootstrap JS
    script(src='/js/bootstrap.min.js')
    script(src='/js/bootstrap-switch.min.js')
    // Isotope, Pretty Photo JS
    script(src='/js/jquery.isotope.js')
    script(src='/js/jquery.prettyPhoto.js')
    // Support Page Filter JS
    script(src='/js/filter.js')
    // SLIDER REVOLUTION 4.x SCRIPTS
    script(src='/js/jquery.themepunch.tools.min.js')
    script(src='/js/jquery.themepunch.revolution.min.js')
    // Respond JS for IE8
    script(src='/js/respond.min.js')
    // HTML5 Support for IE
    script(src='/js/html5shiv.js')
    // Custom JS
    script(src='/js/custom.js')
    
    script(src='/js/service-worker.js')
    
    script(src='/js/config.js')
    script(src='/js/demo.js')
    script(src='/js/main.js')
    
    
    script.
      // Revolution Slider
      var revapi;
      jQuery(document).ready(function() {
      revapi = jQuery('.tp-banner').revolution(
      {
      delay: 9000,
      startwidth: 1200,
      startheight: 300,
      hideThumbs: 200,
      shadow: 3,
      navigationType: "none",
      hideThumbsOnMobile: "on",
      hideArrowsOnMobile: "on",
      hideThumbsUnderResoluition: 0,
      touchenabled: "on",
      fullWidth: "on"
      });
      });
